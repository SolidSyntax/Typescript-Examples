/*
Reference:
    https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
    https://www.typescriptlang.org/docs/handbook/compiler-options.html
*/
{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true, //Any must be specified if true
        "sourceMap": true, //Generate a map file for debugging
        "noEmitOnError" :true, //Do not create a js file when compilation fails
        "strictNullChecks": true, //A variable can not be null
        "noUnusedParameters": false, //All parameters must not be used for these examples
        "noUnusedLocals": false //All local variables must not be used for these examples
    },
    "exclude": [
        "node_modules"
    ]
}